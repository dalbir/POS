<Window x:Class="POS.Retail.MyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Prompt Dialog" Height="229" Width="344"  ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="5,5,5,5" Height="182">
        <TextBlock Name="TitleTextBox" Margin="0,0,0,10" />
        <TextBox Name="InputTextBox"  />
        <PasswordBox  Name="passwordBox1" Height="26" />
        <Grid Margin="0,10,0,0" Height="85">
            <Grid.RowDefinitions>
                <RowDefinition Height="37*" />
                <RowDefinition Height="34*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160*" />
                <ColumnDefinition Width="131*" />
            </Grid.ColumnDefinitions>
            <Button Name="BtnOk" Content="OK" Margin="0,0,19,6" Padding="8" Click="BtnOk_Click" />
            <Button Name="BtnCancel" Content="Cancel" Padding="8" Click="BtnCancel_Click" Grid.Column="1" Margin="0,0,0,6" />
            <Button Content="Keyboard" Name="btn_keyboard" Grid.Row="1" Grid.ColumnSpan="2" Margin="68,0,56,0" Click="btn_keyboard_Click" />
        </Grid>
    </StackPanel>
</Window>

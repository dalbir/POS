<Window x:Class="POS.Retail.EnterStartEndDate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Info Prompt" Height="170" Width="384" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Label Height="36" HorizontalAlignment="Left" Margin="12,12,0,0" Name="lbl_heading" VerticalAlignment="Top" Width="225" FontWeight="Bold" />
        <TextBox Height="27" HorizontalAlignment="Left" Margin="12,86,0,0" Name="txt_date" VerticalAlignment="Top" Width="323" FontWeight="Bold" FontSize="13" />
        <Button Content="OK" Height="27" HorizontalAlignment="Left" Margin="260,12,0,0" Name="btn_ok" VerticalAlignment="Top" Width="90" FontWeight="Bold" Click="btn_ok_Click" />
        <Button Content="CANCEL" Height="27" HorizontalAlignment="Left" Margin="260,45,0,0" Name="btn_cancel" VerticalAlignment="Top" Width="90" FontWeight="Bold" Click="btn_cancel_Click" />
    </Grid>
</Window>
